{
	"env": {
			"browser": true,
			"node": true,
			"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
	},
	"rules": {
			"indent": [
					"error",
					"tab",
					{ "SwitchCase": 1}
			],
			"linebreak-style": [
					"error",
					"windows"
			],
			"quotes": [
					"error",
					"single"
			],
			"semi": [
					"error",
					"always"
			]
	},
	"globals": {
			"process": "readonly",
			"React": "readonly",
			"ReactDOM": "readonly"
	},
	"parser": "babel-eslint"
}
